datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Property {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  price       Float?
  size        Int?
  description String?
  address     String?
  agent       Agent?   @relation(fields: [agentId], references: [id])
  agentId     String?
}

model Appointment {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  date      DateTime?
  time      DateTime?
  location  String?
  client    Client?   @relation(fields: [clientId], references: [id])
  clientId  String?
  agent     Agent?    @relation(fields: [agentId], references: [id])
  agentId   String?
}

model Client {
  id           String        @id @default(cuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  name         String?
  email        String?
  phone        String?
  appointments Appointment[]
}

model Agent {
  id           String        @id @default(cuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  name         String?
  email        String?
  phone        String?
  properties   Property[]
  appointments Appointment[]
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
}
